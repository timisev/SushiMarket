@model Product

<div class="m_block">
    <div class="card" style="width: 18rem;">
        <img src="~/img/hit21.png" class="card-img-top" alt="..." />
        <div class="card-body">
            <h5><b>@Model.Name</b></h5>
            <p><b>@Model.Price Р</b></p>
        </div>
        <form id="@Model.ProductID" asp-action="AddToCart"
              asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn btn-success btn-lg active">
                    В корзину
                </button>
            </span>
        </form>
    </div>
</div>