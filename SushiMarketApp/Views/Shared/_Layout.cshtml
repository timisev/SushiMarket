<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .m_block{
            float: left;
            line-height: 100px;
            font-size: 20px;
            background: white;
            color: black;
            margin-top: 60px;
            width: 320px;
            height: 500px;
            margin-right: 10px;
            text-align: center; 
        } 

        .m-bord-block{
            border: 100px solid;
            border-color:white;
        }
         
        a {
            text-decoration: none;
            color: black;
        }

        TD.leftcol {
            width: 110px;
            vertical-align: top;
        }

        .button {
            border: solid 3px deeppink;
            color: deeppink;
            font-weight: bold;
            text-decoration: none; 
            padding: 10px;
            margin-left: 15px;
        }

        .button2 {
            border: solid;
            background: deeppink;
            color: white;
            text-decoration: none;
            padding: 10px
        }

        .button:hover {
            background: deeppink;
            color: white;
            font-weight: bold;
        }

        .underline { 
        }

        .underline:hover {
            text-decoration: underline 3px deeppink;
        }

        .text-menu{
            font-weight: bold;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="~/">Sushi Market</a>
            <button class="navbar-toggler text-menu" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item underline">
                        <a class="nav-link active text-menu" aria-current="page" href="~/">Меню</a>
                    </li> 
                    <li class="nav-item underline">
                        <a class="nav-link active text-menu" aria-current="page" href="#">О нас</a>
                    </li> 
                    <li class="nav-item underline">
                        <a class="nav-link active text-menu" aria-current="page" href="#">Контакты</a>
                    </li>
                    <li style="float:left;">
                        @await Component.InvokeAsync("CartSummary")
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="m-bord-block">
        @RenderBody()
    </div>
</body>
</html>
